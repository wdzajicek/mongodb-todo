<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <!-- Preconnect/preloading -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <!-- Google fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
  <!-- Main stylesheet -->
  <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
</head>
<body class="todo__body">
  <div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
      <form action="" method="POST" class="todo-header">
        <input type="text" name="content">
        <button type="submit">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            height="16"
            width="16"
            viewBox="0 0 24 24"
            class="svg svg--plus"
            aria-labelledby="plus-title"
          >
            <title lang="en" id="plus-title">Add new item</title>
            <path d="M0 0h24v24H0V0z" fill="none" />
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
          </svg>
        </button>
      </form>
      <ul class="todo-list">
        <% todoTasks.forEach(details => { %>
        <% if (details._id == idTask) { %>
        <li class="todo-list-item">
          <form action="/edit/<%= details._id %>" method="POST">
            <input type="text" value="<%= details.content %>" name="content">
            <button type="submit">Confirm</button>
            <a href="/" class="cancel">Cancel</a>
          </form>
        </li>
        <% } else { %>
        <li class="todo-list-item">
          <div class="todo-list-item-name"><%= details.content %></div>
          <a href="/edit/<%= details._id %>" class="edit">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="16"
              viewBox="0 0 24 24"
              width="16"
              class="svg svg--edit"
              aria-labelledby="edit-title"
            >
              <title lang="en" id="edit-title">Edit item</title>
              <path d="M0 0h24v24H0V0z" fill="none" />
              <path d="M14.06 9.02l.92.92L5.92 19H5v-.92l9.06-9.06M17.66 3c-.25 0-.51.1-.7.29l-1.83 1.83 3.75 3.75 1.83-1.83c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.2-.2-.45-.29-.71-.29zm-3.6 3.19L3 17.25V21h3.75L17.81 9.94l-3.75-3.75z" />
            </svg>
          </a>
          <a href="/remove/<%= details._id %>" class="remove">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="16"
              viewBox="0 0 24 24"
              width="16"
              class="svg svg--remove"
              aria-labelledby="remove-title"
            >
              <title lang="en" id="remove-title">Remove item</title>
              <path d="M0 0h24v24H0V0z" fill="none" />
              <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z" />
            </svg>
          </a>
        </li>
        <% } %>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
